<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/spongebob"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/spongebob"/>

    <EditText
        android:layout_margin="16dp"
        android:id="@+id/edt_mock_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@null"
        tools:text="Contoh ahjah"
        android:hint="Place your text here!"
        app:layout_constraintBottom_toTopOf="@id/button_panel"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/button_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/btn_mock_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="mOcK"
            android:textAllCaps="false" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>